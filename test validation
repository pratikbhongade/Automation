from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time

# Step 1: Ask the user for the validation portal link
validation_portal = input("Please enter the validation portal link: ")

# Initialize the WebDriver
driver = webdriver.Chrome()  # Change to Firefox() or another browser if needed

try:
    # Step 2: Go to the submitted validation portal link
    driver.get(validation_portal)

    # Step 3: Click on the 'Set Testing Results' button
    set_testing_results_button = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'Set Testing Results')]"))
    )
    set_testing_results_button.click()

    # Wait for the results page to load
    time.sleep(2)

    # Step 4: Select the 'Success' radio button
    success_radio = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, "//input[@id='TestingResults' and @value='Success']"))
    )
    success_radio.click()

    # Step 5: Click on the OK button
    ok_button = WebDriverWait(driver, 10).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'K')]"))
    )
    ok_button.click()

    print("Validation results submitted successfully!")

finally:
    # Close the WebDriver
    time.sleep(2)  # Wait before closing to see the results
    driver.quit()
