from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import time

# Step 1: Ask the user for the validation portal link
validation_portal = input("Please enter the validation portal link: ")

# Initialize the WebDriver for Edge
driver = webdriver.Edge()

try:
    # Step 2: Go to the submitted validation portal link
    driver.get(validation_portal)

    # Step 3: Click on the 'Set Testing Results' button
    set_testing_results_button = WebDriverWait(driver, 20).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'Set Testing Results')]"))
    )
    set_testing_results_button.click()

    # Wait for the new window to open
    time.sleep(2)

    # Step 4: Switch to the new window
    WebDriverWait(driver, 20).until(EC.new_window_is_opened(driver.window_handles))
    driver.switch_to.window(driver.window_handles[-1])  # Switch to the last opened window

    # Print the URL of the new window
    new_window_url = driver.current_url
    print(f"New window URL: {new_window_url}")

    # Step 5: Wait for the 'Success' radio button to be present
    success_radio = WebDriverWait(driver, 20).until(
        EC.presence_of_element_located((By.XPATH, "//input[@type='radio' and @value='Success']"))
    )

    # Click the radio button
    success_radio.click()

    # Step 6: Click on the OK button
    ok_button = WebDriverWait(driver, 20).until(
        EC.element_to_be_clickable((By.XPATH, "//button[contains(text(), 'K')]"))
    )
    ok_button.click()

    print("Validation results submitted successfully!")

except Exception as e:
    print(f"An error occurred: {e}")

finally:
    # Close the WebDriver
    time.sleep(2)
    driver.quit()
